<!-- Include header -->
<%- include ../common/header.ejs %>

<section class="how-to-use-tip">
  <div class="grid-x grid-padding-x">

    <div class="tutorial-instructions-main callout primary cell">
      <h4>
        This is second tutorial image showing you how to play the game.
      </h4>
      <h5>
        This is not part of the game yet.
      </h5>
    </div>

  </div>
</section>

<section class="main-image-query grid-container">
  <div class="grid-x grid-padding-x align-center">

    <div id="tip1_00" class="tutorial-instructions absolute popup">
      <p>As you can see, some images are quite hard to describe with words.</p>
    </div>
    <div id="tip1_04" class="tutorial-instructions absolute popup important ">
      <p>Please try to describe these as well with at least few words.</p>
    </div>  

    <div class="progerss-bar small-12 cell">
      <span class="curr"><%= gameProgress.curr %></span>
      <span class="separator">/</span>
      <span class="total"><%= gameProgress.total %></span>
    </div>

    <div class="main-image small-12 cell">
      <img src="../images/tutorials/tutorial_pic2.jpg" />
    </div>

    <div class="autocomplete-keywords-container small-12 cell">

    

      <!-- Include autocomplete module -->
      <%- include ../modules/autocomplete.ejs %>


      <div id="tip1_03" class="alert tutorial-instructions absolute popup superimportant">
        <p>After submiting this one, game will start! Are you ready?</p>
      </div>

    </div>

  </div>
</section>

</body>

<!-- Include footer -->
<%- include ../common/footer.ejs %>